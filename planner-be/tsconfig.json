{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["config/*"],
      "@/modules/*": ["modules/*"],
      "@/auth/*": ["modules/auth/*"],
      "@/date/*": ["modules/date/*"],
      "@/statistics/*": ["modules/statistics/*"],
      "@/tasks/*": ["modules/tasks/*"],
      "@/user/*": ["modules/user/*"],
      "@/goals/*": ["modules/goals/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  },
  "ignorePatterns": ["dist", "node_modules", "eslint.config.js"],
  "include": ["src"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
